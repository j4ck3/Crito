@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.WhyUsItems)Model.Content;
}

<div class="p-3 d-flex justify-between">
    <div class="me-3">
        <i class="@content.Value("whyUsItemIcon") btn-theme-sec"></i>
    </div>
    <div>
        <h4 class="weight-bold fs-3">@content.Value("whyUsItemTitle")</h4>
        <p class=" fs-6 weight-regular font-inter text-opacity-75">@content.Value("whyUsItemDescription")</p>
    </div>
</div>

